{
  // autoDocstring settings
  "autoDocstring.docstringFormat": "sphinx",
  "autoDocstring.startOnNewLine": true,
  "autoDocstring.guessTypes": false,
  "autoDocstring.customTemplatePath": ".vscode/pydocstring.mustache",
  // Python settings
  "python.analysis.autoImportCompletions": false,
  "python.languageServer": "Pylance",
  "mypy-type-checker.args": ["--show-column-numbers", "--show-error-codes"],
  "flake8.args": ["--max-line-length=88"],
  "debugpy.debugJustMyCode": false,
  "python.testing.autoTestDiscoverOnSaveEnabled": false,
  "pythonIndent.trimLinesWithOnlyWhitespace": true,
  "python.analysis.autoFormatStrings": true,
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "black-formatter.importStrategy": "fromEnvironment",
  "flake8.importStrategy": "fromEnvironment",
  // language-specific editor settings
  "[python]": {
    "editor.rulers": [88],
    "editor.tabSize": 4,
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.formatOnSave": false,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[restructuredtext]": {
    "editor.formatOnSave": false,
    "editor.rulers": [120],
    "editor.tabSize": 3
  }
}
